{
  "name": "multi-style-json-website",
  "version": "3.0.0",
  "description": "A JSON-driven multi-style website system - same content, multiple visual designs. Features Zen and Luxury themes for Naval Ravikant's wisdom.",
  "main": "test-pages.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -c-1",
    "serve": "npx http-server . -p 3000 -c-1",
    "dev": "npx http-server . -p 3000 -c-1",
    "build": "mkdir -p build && cp -r data/ js/ docs/ design-*.html test-pages.html package.json LICENSE README.md build/",
    "clean": "rm -rf build/",
    "preview": "npx http-server build/ -p 3000 -c-1"
  },
  "keywords": [
    "json-driven",
    "multi-style",
    "website-themes",
    "content-management",
    "tailwind-css",
    "zen-design",
    "luxury-design",
    "naval-ravikant",
    "wisdom",
    "responsive",
    "modular",
    "scalable"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/multi-style-json-website.git"
  },
  "homepage": "https://your-username.github.io/multi-style-json-website",
  "bugs": {
    "url": "https://github.com/your-username/multi-style-json-website/issues"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "Chrome >= 90",
    "Firefox >= 88",
    "Safari >= 14",
    "Edge >= 90"
  ]
}
